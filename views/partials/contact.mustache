<div class="section group hide-mobile">
    <div class="col span_2_of_7">
        <div class="small-circle">
            <img src="/files/img/contact.jpg" />
        </div>
    </div>

    <div class="small-titles col span_5_of_7">
        <h1>{{gettext "Get in touch"}}</h1>
        <h2>{{gettext "Get in touch 2"}}</h2>
        <div class="mtl mbn small-font"><span class="bold">{{gettext "My Email"}}</span> <a href="mailto:info@norwegiantranslator.no">info@norwegiantranslator.no</a></div>
        <div class="mts mbs small-font"><span class="bold">{{gettext "Skype"}}</span> Irisafa</div>
        <div class="mts mbl small-font italic">{{gettext "Use the form"}}</div>
    </div>
</div>

<div class="section group">
    <div class="col span_2_of_7">&nbsp;</div>
    <div class="col span_5_of_7 mln">

        <form id="contact-form" method="POST" action="/send">
            <div class="input pbs">
                <label for="email" class="pbs">{{gettext "Your Email"}}</label>
                <input type="email" name="email" id="email" size="40" class="mbm"></input>
            </div>

            <div class="input pbs">
                <label for="project" class="pbs">{{gettext "Project"}}</label>
                <input type="text" name="project" id="project" size="40" class="mbm"></input>
            </div>

            <div class="input pbl">
                <label for="message" class="pbs">{{gettext "Message"}}</label>
                <textarea rows="20" cols="60" name="message" id="message"></textarea>
            </div>

            <div class="input">
                <button id="send-button">Send</button>
            </div>
        </form>
    </div>
</div>
